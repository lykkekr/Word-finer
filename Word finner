   color: white;
 }

 .container {
   width: 80%;
   max-width: 600px;
   margin-top: 60px;
 }

 .mode-buttons {
   display: flex;
   gap: 10px;
   margin-bottom: 20px;
 }

 button {
   flex: 1;
   padding: 10px;
   border: none;
   cursor: pointer;
   border-radius: 6px;
   background: #4a2fb4;
   color: white;
   font-size: 15px;
 }

 button.active {
   background: #b39ddb;
 }

 input {
   width: 100%;
   padding: 12px;
   border: none;
   border-radius: 6px;
   font-size: 16px;
   margin-bottom: 15px;
 }

 #results {
   margin-top: 20px;
   font-size: 16px;
 }

 .result-item {
   margin-bottom: 6px;
 }
