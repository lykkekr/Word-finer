<body>

<div class="container">
 <div class="mode-buttons">
   <button id="btnSimilar" class="active">Nesten rimer</button>
   <button id="btnRhyme">Rimer</button>
 </div>

 <input id="search" placeholder="Skriv et ord her...">
 
 <button id="searchBtn">Søk</button>
 
 <div id="results"></div>
</div>

<script>
 let mode = "similar";

 const btnSimilar = document.getElementById("btnSimilar");
 const btnRhyme = document.getElementById("btnRhyme");
 const searchBtn = document.getElementById("searchBtn");
 const search = document.getElementById("search");
 const results = document.getElementById("results");

 btnSimilar.onclick = () => {
   mode = "similar";
   btnSimilar.classList.add("active");
   btnRhyme.classList.remove("active");
 };

 btnRhyme.onclick = () => {
   mode = "rhyme";
   btnRhyme.classList.add("active");
   btnSimilar.classList.remove("active");
 };

 searchBtn.onclick = () => runAI(search.value);
 search.onkeydown = (e) => {
   if (e.key === "Enter") runAI(search.value);
 };

 function runAI(word) {
   if (!word.trim()) return;

   // Super-fake AI placeholder (dev later)
   let generated = [];

   if (mode === "similar") {
     generated = ["ord1", "ord2", "ord3", "ord4"];
   } else {
     generated = ["rim1", "rim2", "rim3", "rim4"];
   }

   results.innerHTML = generated.map(g => `<div class="result-item">${g}</div>`).join("");
 }
</script>
</body>
